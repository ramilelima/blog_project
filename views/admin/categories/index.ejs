<%- include('../../partials/header.ejs'); -%>
<%- include('../../partials/adminNavbar.ejs'); -%>
    <div class="container">
        <style rel="stylesheet">
            body {
                background-image: url("/img/background.png");
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-position: center center;
                background-size: cover;
            }
        </style>
        <hr>
        <div class="card">
            <div class="card-header">
            <h2>Categories</h2>
            <a class="btn btn-outline-success" href="/admin/categories/new">Create a new category</a>
            <hr>
            </div>
            <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category=> { %>
                        <tr>
                            <th>
                                <%= category.id %>
                            </th>
                            <th>
                                <%= category.title %>
                            </th>
                            <th>
                                <%= category.slug %>
                            </th>
                            <th>
                                <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-outline-info">Edit</a>
                                
                                <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="deleteAttetion(event, this)">
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                    <button class="btn btn-outline-danger">Delete</button>
                                </form>
                            </th>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

<%- include('../../partials/footer.ejs'); -%>

<script>
    function deleteAttetion(event, form){
        event.preventDefault();
        var decision = confirm("Do you really want to delete this category?");
        if(decision) {
            form.submit();
        } 
    }
</script>